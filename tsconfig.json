{
  "compilerOptions": {
    "incremental": false,
    "target": "es5",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "rootDir": "./src",   
    "outDir": "./dist",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
